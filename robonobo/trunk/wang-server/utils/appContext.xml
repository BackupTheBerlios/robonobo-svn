<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="dataSource" class="org.postgresql.ds.PGSimpleDataSource">
		<property name="serverName" value="localhost"/>
		<property name="portNumber" value="5432"/>
		<property name="user" value="robonobo"/>
		<property name="password" value="password"/>
		<property name="databaseName" value="wang"/>
	</bean>

	<bean id="transactionManager"
		class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<!-- Look for annotation-declared beans -->
	<context:component-scan base-package="com.robonobo.wang" />
</beans>
